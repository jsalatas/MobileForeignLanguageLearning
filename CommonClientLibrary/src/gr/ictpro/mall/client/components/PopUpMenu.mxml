<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
						   xmlns:s="gr.ictpro.mall.client.components.*"
						   xmlns:signals="org.osflash.signals.*"
						   width="100%" height="100%" initialize="init(event)"
						   addedToStage="addedToStageHandler(event)">
	<fx:Declarations>
		<signals:Signal id="itemSelected"/>
	</fx:Declarations>	
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayList;
			import mx.core.mx_internal;
			import mx.events.FlexEvent;
			import mx.events.FlexMouseEvent;
			import mx.events.ResizeEvent;
			import mx.managers.IFocusManagerComponent;
			import mx.utils.ObjectProxy;
			
			import spark.events.IndexChangeEvent;
			
			import gr.ictpro.mall.client.components.renderers.ListRenderer;
			
			
			[Bindable]
			public var menuList:ArrayList;

			[Bindable]
			public var borderVisible:Boolean=false;
			

			protected function init(event:FlexEvent):void
			{
				this.addEventListener(FlexMouseEvent.MOUSE_DOWN_OUTSIDE, this.close);
			}
			
			override public function close(commit:Boolean = false, data:* = undefined):void
			{
				stage.removeEventListener(Event.RESIZE, resizeHandler);
				super.close(commit, data);
			}
			
			protected function list_changeHandler(event:IndexChangeEvent):void
			{
				itemSelected.dispatch(new ObjectProxy(menuList.getItemAt(event.newIndex)));
				this.close();
			}
			
			protected function addedToStageHandler(event:Event):void
			{
				stage.addEventListener(Event.RESIZE, resizeHandler);
			}
			
			protected function resizeHandler(event:Event):void
			{
				this.close();
			}
			
			protected function list_resizeHandler(event:ResizeEvent):void
			{
				if(this.y+list.height > stage.height) {
					this.y = owner.localToGlobal(new Point(0, owner.y)).y -list.height; 
				}
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Group width="100%" height="100%">
		<s:Rect width="100%" height="100%">
			<s:fill><s:SolidColor color="0xFFFFFF"/></s:fill>
		</s:Rect>
		<s:List id="list" width="100%"
				height="{(menuList.length&gt;5?5:menuList.length)*(new ListRenderer().definedHeight) +2}"
				borderAlpha="{borderVisible?1:0}" borderVisible="{borderVisible}"
				change="list_changeHandler(event)" dataProvider="{menuList}" resize="list_resizeHandler(event)"
				itemRenderer="gr.ictpro.mall.client.components.renderers.ListRenderer"/>
	</s:Group>
</s:SkinnablePopUpContainer>
