<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="gr.ictpro.mall.client.components.*"
						   initialize="init(event)"
						   width="100%" height="100%" xmlns:signals="org.osflash.signals.*">
	<fx:Declarations>
		<signals:Signal id="itemSelected"/>
	</fx:Declarations>	
	
	<fx:Script>
		<![CDATA[
			import gr.ictpro.mall.client.components.renderers.ListRenderer;
			
			import mx.collections.ArrayList;
			import mx.core.mx_internal;
			import mx.events.FlexEvent;
			import mx.events.FlexMouseEvent;
			import mx.managers.IFocusManagerComponent;
			
			import spark.events.IndexChangeEvent;
			
			
			[Bindable]
			public var menuList:ArrayList;

			[Bindable]
			public var borderVisible:Boolean=false;
			

			protected function init(event:FlexEvent):void
			{
				this.addEventListener(FlexMouseEvent.MOUSE_DOWN_OUTSIDE, this.close);
				
			}
			
			protected function list_changeHandler(event:IndexChangeEvent):void
			{
				itemSelected.dispatch(menuList.getItemAt(event.newIndex));
				this.close();
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Group width="100%" height="100%">
		<s:Rect width="100%" height="100%">
			<s:fill><s:SolidColor color="0xFFFFFF" /></s:fill>
		</s:Rect>
		<s:List id="list" borderVisible="{borderVisible}" width="100%" borderAlpha="{borderVisible?1:0}" dataProvider="{menuList}" height="{menuList.length*(new ListRenderer().definedHeight) +2}"
				itemRenderer="gr.ictpro.mall.client.components.renderers.ListRenderer" change="list_changeHandler(event)"/>
	</s:Group>
</s:SkinnablePopUpContainer>
