<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:signals="org.osflash.signals.*"
		  width="100%" height="100%" xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import gr.ictpro.mall.client.model.User;
			
			import mx.core.IVisualElementContainer;
			
			[Bindable]
			public var user:User;
			
			public function dispose():void
			{
				if(parent && parent.contains(this))
					IVisualElementContainer(parent).removeElement(this);
			}

		]]>
	</fx:Script>
	<s:Group bottom="0" width="100%" height="30">
		<s:Rect width="100%" height="100%">
			<s:fill><mx:SolidColor color="0xAAAAAA" /></s:fill>
		</s:Rect>
		<s:Label x="10" y="10" text="{user.fullname}" color="0xFFFFFF"/>
	</s:Group>
</s:Module>
