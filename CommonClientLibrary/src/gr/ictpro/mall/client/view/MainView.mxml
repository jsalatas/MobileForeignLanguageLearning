<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:signals="org.osflash.signals.*"
		  width="100%" height="100%" fontSize="20" fontWeight="normal">
	<fx:Declarations>
		<signals:Signal id="showMenuClickled"/>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import gr.ictpro.mall.client.model.User;
			
			import mx.core.IVisualElementContainer;
			
			[Bindable]
			public var user:User;
			
			public function dispose():void
			{
				if(parent && parent.contains(this))
					IVisualElementContainer(parent).removeElement(this);
			}

			protected function showMenu(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				
			}
			
		]]>
	</fx:Script>
	<s:Group top="0" width="100%" height="40">
		<s:Rect width="100%" height="100%">
			<s:fill><s:SolidColor color="0xAAAAAA" /></s:fill>
		</s:Rect>
		<s:Group top="0" width="100%" height="40">
			<s:layout>
				<s:HorizontalLayout paddingLeft="5" paddingRight="5" verticalAlign="middle" gap="10"/>
			</s:layout>
			<s:Image source="{user.photo}" width="21" height="28" click="showMenu(event)"/>
			<s:Label click="showMenu(event)" color="0xFFFFFF" fontWeight="normal" text="{user.name}"/>
		</s:Group>
	</s:Group>
</s:Module>
