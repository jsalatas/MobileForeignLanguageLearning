<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="gr.ictpro.mall.client.components.*"
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>

	<!-- states -->
	<s:states>
		<mx:State name="disabled" />
		<mx:State name="down" />
		<mx:State name="over" />
		<mx:State name="up" />
	</s:states>
	<s:Rect radiusX="{getStyle('radiusX')}"
			radiusY="{getStyle('radiusY')}"
			width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="{hostComponent.getStyle('backgroundColor')}"
						  color.down="{hostComponent.getStyle('onClickBackgroundColor')}" />
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0xaaaaaa" weight="1"/>
		</s:stroke>
	</s:Rect>
	<s:BitmapImage id="iconDisplay" height="100%" width="100%" top="5" left="5" bottom="5" right="5"
				   includeInLayout="{iconDisplay.source}" scaleMode="letterbox" alpha.disabled="0.5" />		
</s:Skin>
