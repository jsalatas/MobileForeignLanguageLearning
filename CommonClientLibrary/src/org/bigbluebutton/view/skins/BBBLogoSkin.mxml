<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="gr.ictpro.mall.client.components.*"
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Image")]
	</fx:Metadata>

	<!-- states -->
	<s:states>
		<mx:State name="disabled" />
		<mx:State name="invalid" />
		<mx:State name="ready" />
		<mx:State name="loading" />
		<mx:State name="uninitialized" />
	</s:states>

	<!-- SkinParts
	name=progressIndicator, type=spark.components.supportClasses.Range, required=false
	name=imageDisplay, type=spark.primitives.BitmapImage, required=true
	-->
	<s:BitmapImage id="imageDisplay"
				   left="0"
				   top="0"
				   right="0"
				   bottom="0"
				   source="{getStyle('imageSource')}" />
</s:Skin>
