<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="gr.ictpro.mall.client.components.*"
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>

	<!-- states -->
	<s:states>
		<mx:State name="disabled" />
		<mx:State name="down" />
		<mx:State name="over" />
		<mx:State name="up" />
	</s:states>

	<s:Rect top="{getStyle('topAlign')}"
			bottom="{getStyle('bottomAlign')}"
			right="{getStyle('rightAlign')}"
			left="0">
		<s:fill>
			<s:SolidColor color="{hostComponent.getStyle('backgroundColor')}"
						  color.down="{hostComponent.getStyle('onClickBackgroundColor')}" />
		</s:fill>
	</s:Rect>
	<s:BitmapImage source="{getStyle('backgroundImage')}"
				   horizontalCenter="0"
				   verticalCenter="0" />

</s:Skin>
