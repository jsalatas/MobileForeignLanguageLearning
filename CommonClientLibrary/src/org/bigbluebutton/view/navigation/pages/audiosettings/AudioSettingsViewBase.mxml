<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="gr.ictpro.mall.client.components.*"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				xmlns:view="org.bigbluebutton.core.view.*">

	<fx:Script>
		<![CDATA[
			import gr.ictpro.mall.client.runtime.Device;
			
			import org.bigbluebutton.view.navigation.pages.PagesENUM;
			import org.bigbluebutton.view.navigation.pages.TransitionAnimationENUM;
		]]>
	</fx:Script>

	<s:Scroller width="100%"
				height="100%">
		<s:Group width="100%"
				  height="100%"
				  >
			<s:layout>
				<s:VerticalLayout horizontalAlign="center" />
			</s:layout>

			<s:Line width="90%">
				<s:stroke>
					<s:SolidColorStroke color="{getStyle('lineColor')}"
										weight="{getStyle('lineWeight')}" />
				</s:stroke>
			</s:Line>
			<s:Group width="90%"
					  height="7%"
>
				<s:layout>
					<s:HorizontalLayout verticalAlign="middle" horizontalAlign="right" />
				</s:layout>
				<s:Label width="100%"
						 text="{Device.translations.getTranslation('Enable audio')}" />
				<s:CheckBox id="enableAudio0" />
			</s:Group>
			<s:Line width="90%">
				<s:stroke>
					<s:SolidColorStroke color="{getStyle('lineColor')}"
										weight="{getStyle('lineWeight')}" />
				</s:stroke>
			</s:Line>
			<s:Group width="90%"
					  height="7%"
					  >
				<s:layout>
					<s:HorizontalLayout verticalAlign="middle" horizontalAlign="right" /> 
				</s:layout>
				<s:Label width="100%"
						 text="{Device.translations.getTranslation('Enable microphone')}" />
				<s:CheckBox id="enableMic0" />
			</s:Group>
			<s:Line width="90%">
				<s:stroke>
					<s:SolidColorStroke color="{getStyle('lineColor')}"
										weight="{getStyle('lineWeight')}" />
				</s:stroke>
			</s:Line>
			<s:Group width="90%"
					  height="7%"
					  >
				<s:layout>
					<s:HorizontalLayout verticalAlign="middle" horizontalAlign="right" />
				</s:layout>
				<s:Label width="100%"
						 text="{Device.translations.getTranslation('Push to talk')}" />
				<s:CheckBox id="enablePushToTalk0" />
			</s:Group>
			<s:Line width="90%">
				<s:stroke>
					<s:SolidColorStroke color="{getStyle('lineColor')}"
										weight="{getStyle('lineWeight')}" />
				</s:stroke>
			</s:Line>


			<s:Group width="90%"
					  height="7%"
					  >
				<s:layout>
					<s:HorizontalLayout verticalAlign="middle" horizontalAlign="right" />
				</s:layout>
				<s:Label width="100%"
						 text="{Device.translations.getTranslation('Microphone level')}" />

				<s:Rect id="micActivity0"
						height="{gainSlider0.height/2}"
						width="{gainSlider0.width}"
						includeInLayout="false"
						x="{gainSlider0.x}"
						y="{gainSlider0.y + micActivity0.height/2}">
					<s:fill>
						<s:LinearGradient>
							<s:GradientEntry color="{getStyle('greenColor')}"
											 ratio="0.00" />
							<s:GradientEntry color="{getStyle('yellowColor')}"
											 ratio="0.8" />
							<s:GradientEntry color="{getStyle('redColor')}"
											 ratio="1" />

						</s:LinearGradient>
					</s:fill>
				</s:Rect>

				<s:Rect id="micActivityMask0"
						height="{micActivity0.height}"
						width="{micActivity0.width}"
						includeInLayout="false"
						x="{micActivity0.x}"
						y="{micActivity0.y}">
					<s:fill>
						<s:SolidColor color="#FFFFFF" />
					</s:fill>
				</s:Rect>


				<s:HSlider id="gainSlider0"
						   width="90%"
						   value="5"
						    />
			</s:Group>
			<s:Line width="90%">
				<s:stroke>
					<s:SolidColorStroke color="{getStyle('lineColor')}"
										weight="{getStyle('lineWeight')}" />
				</s:stroke>
			</s:Line>


			<s:Spacer height="10%" />

			<s:Button id="continueToMeeting"
					  width="90%"
					  label="{Device.translations.getTranslation('Continue to meeting')}"/>

		</s:Group>
	</s:Scroller>
</view:NoTabView>
