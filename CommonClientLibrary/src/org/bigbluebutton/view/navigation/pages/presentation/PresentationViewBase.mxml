<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="gr.ictpro.mall.client.components.*"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				xmlns:view="org.bigbluebutton.core.view.*"
				xmlns:whiteboard="org.bigbluebutton.view.navigation.pages.whiteboard.*" xmlns:presentation="org.bigbluebutton.view.navigation.pages.presentation.*">
<view:states>
	<mx:State name="viewer" />
	<mx:State name="presenter" />
</view:states>
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var slideModel:SlideModel = new SlideModel();
		]]>
	</fx:Script>
			<s:Group id="content0"
				 width="100%"
				 height="100%">
			<s:layout>
				<s:VerticalLayout horizontalAlign="center"
								  verticalAlign="middle" />
			</s:layout>
			<s:Group id="viewport0"
					 clipAndEnableScrolling="true"
					 width="100%"
					 height="100%">
<!-- salatas				
				<s:layout>
					<s:BasicLayout />
				</s:layout>
-->				
				<mx:SWFLoader id="slide0"
							 scaleContent="true"
							 width="100%"
							 height="100%"  />
				<whiteboard:WhiteboardCanvas id="whiteboardCanvas0" />
			</s:Group>
			<s:Group width="100%" id="presenterContainer" height="{currentState=='presenter'?70:0}">
				<s:layout>
					<s:VerticalLayout />
				</s:layout>
				<presentation:AnnotationControls id="annotationControls0" slide="{slide0}" whiteboard="{whiteboardCanvas0}" slideModel="{slideModel}" viewport="{viewport0}" left="10" right="10" includeIn="presenter" height="30"/>
				<presentation:PresenterControls id="presenterControls0" content="{content0}" viewport="{viewport0}" slideLoader="{slide0}" whiteBoard="{whiteboardCanvas0}" slideModel="{slideModel}" left="10" right="10" includeIn="presenter" height="30"/>
			</s:Group>
		</s:Group>
	
</view:NoTabView>
