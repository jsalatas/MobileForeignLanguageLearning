<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="gr.ictpro.mall.client.components.*"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				xmlns:view="org.bigbluebutton.core.view.*">
	<fx:Script>
		<![CDATA[
			import gr.ictpro.mall.client.runtime.Device;
		]]>
	</fx:Script>

	<view:states>
		<mx:State name="MEETING_ENDED" />
		<mx:State name="CONNECTION_DROPPED" />
		<mx:State name="USER_LOGGED_OUT" />
		<mx:State name="USER_KICKED_OUT" />
		<mx:State name="MODERATOR_DENIED" />
	</view:states>

	<s:Group width="100%"
			 height="100%">
		<s:layout>
			<s:VerticalLayout verticalAlign="middle"
							  horizontalAlign="center" />
		</s:layout>
		<s:Label id="messageText0"
				 width="100%"
				 textAlign="center"
				 text="{Device.translations.getTranslation('Exit?')}" />
		<s:Button id="yesButton0"
				  width="90%"
				  label="{Device.translations.getTranslation('Yes')}" />
		<s:Button id="noButton0"
				  width="90%"
				  label="{Device.translations.getTranslation('No')}" />
	</s:Group>

</view:NoTabView>
