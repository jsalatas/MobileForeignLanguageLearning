<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- Auto register annotated components as Spring Beans -->
	<context:component-scan base-package="gr.ictpro.mall" />

	<bean id="userDAO" class="gr.ictpro.mall.dao.UserDAOImpl">
		<property name="sessionFactory" ref="hibernate3AnnotatedSessionFactory" />
	</bean>
	<bean id="roleDAO" class="gr.ictpro.mall.dao.RoleDAOImpl">
		<property name="sessionFactory" ref="hibernate3AnnotatedSessionFactory" />
	</bean>
	<bean id="configDAO" class="gr.ictpro.mall.dao.ConfigDAOImpl">
		<property name="sessionFactory" ref="hibernate3AnnotatedSessionFactory" />
	</bean>
	<bean id="profileDAO" class="gr.ictpro.mall.dao.ProfileDAOImpl">
		<property name="sessionFactory" ref="hibernate3AnnotatedSessionFactory" />
	</bean>
	<bean id="emailDAO" class="gr.ictpro.mall.dao.EmailDAOImpl">
		<property name="sessionFactory" ref="hibernate3AnnotatedSessionFactory" />
	</bean>
	<bean id="notificationDAO" class="gr.ictpro.mall.dao.NotificationDAOImpl">
		<property name="sessionFactory" ref="hibernate3AnnotatedSessionFactory" />
	</bean>
	<bean id="userNotificationDAO" class="gr.ictpro.mall.dao.UserNotificationDAOImpl">
		<property name="sessionFactory" ref="hibernate3AnnotatedSessionFactory" />
	</bean>
		<bean id="roleNotificationDAO" class="gr.ictpro.mall.dao.RoleNotificationDAOImpl">
		<property name="sessionFactory" ref="hibernate3AnnotatedSessionFactory" />
	</bean>
	<bean id="userService" class="gr.ictpro.mall.service.UserServiceImpl">
		<property name="userDAO" ref="userDAO"></property>
	</bean>
	<bean id="roleService" class="gr.ictpro.mall.service.RoleServiceImpl">
		<property name="roleDAO" ref="roleDAO"></property>
	</bean>
	<bean id="configService" class="gr.ictpro.mall.service.ConfigServiceImpl">
		<property name="configDAO" ref="configDAO"></property>
	</bean>
	<bean id="emailService" class="gr.ictpro.mall.service.EmailServiceImpl">
		<property name="emailDAO" ref="emailDAO"></property>
	</bean>
	<bean id="notificationService" class="gr.ictpro.mall.service.NotificationServiceImpl">
		<property name="notificationDAO" ref="notificationDAO"></property>
		<property name="userNotificationDAO" ref="userNotificationDAO"></property>
		<property name="roleNotificationDAO" ref="roleNotificationDAO"></property>
	</bean>
	<bean id="profileService" class="gr.ictpro.mall.service.ProfileServiceImpl">
		<property name="profileDAO" ref="profileDAO"></property>
	</bean>
</beans>