<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="gr.ictpro.mall.client.components.*" 
		  xmlns:signals="org.osflash.signals.*"
		  width="100%" height="100%"   
		  >
	<fx:Declarations>
		<signals:Signal id="okClicked"/>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.collections.ArrayList;
			import mx.core.IVisualElementContainer;
			
			import gr.ictpro.mall.client.runtime.Translation;
			
			[Bindable]
			private var _width:int=0;

			[Bindable]
			private var _height:int=0;

			public function dispose():void
			{
				if(parent && parent.contains(this)) {
					IVisualElementContainer(parent).removeElement(this);
				}
			}

			protected function btnOK_clickHandler(event:MouseEvent):void
			{
				okClicked.dispatch();
				
			}
			
			[Bindable]
			public var roles:ArrayCollection;
			
		]]>
	</fx:Script>
	<s:Group horizontalCenter="0" verticalCenter="0">
		<s:layout>
			<s:FormLayout />
		</s:layout>
		<s:FormItem id="formitem" label="{Translation.getTranslation('Name')}" >
			<s:TextInput id="txtName" autoCapitalize="word" textAlign="left" tabIndex="1"/>
		</s:FormItem>
		<s:FormItem label="{Translation.getTranslation('Email')}" >
			<s:TextInput id="txtEmail" softKeyboardType="email" textAlign="left" tabIndex="2"/>	
		</s:FormItem>
		<s:FormItem label="{Translation.getTranslation('I am')}" depth="10000" >
			<s:PopUpList id="role" dataList="{roles}" textAlign="left" tabIndex="3"/>
		</s:FormItem>
		<s:FormItem label="{Translation.getTranslation('User Name')}">
			<s:TextInput id="txtUserName" autoCorrect="false" textAlign="left" tabIndex="4"/>	
		</s:FormItem>
		<s:FormItem label="{Translation.getTranslation('Password')}">
			<s:TextInput id="txtPassword" displayAsPassword="true" textAlign="left" tabIndex="5"/>	
		</s:FormItem>
		<s:FormItem label="{Translation.getTranslation('Confirm Password')}">
			<s:TextInput id="txtConfirmPassword" displayAsPassword="true" textAlign="left" tabIndex="6"/>	
		</s:FormItem>
		<s:FormItem>
			<s:Group>
				<s:layout>
					<s:HorizontalLayout/>
				</s:layout>
				<s:Button id="btnOK" label="{Translation.getTranslation('OK')}" click="btnOK_clickHandler(event)" tabIndex="7"/>
			</s:Group>
		</s:FormItem>
	</s:Group>
</s:Group>
